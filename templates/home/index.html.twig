{% extends 'base.html.twig' %}

{% block title %} Workchase {% endblock %}

{% block ads %}
    <section class="Ads">
        {% for advert in filteredAdverts %}
        <section class="Ad">
            <header class="Ad-header">
                <div class="Date">2019-01-10</div>
                <div class="Bid">
                    <span class="Bid-header">Aplikavo</span>
                    <span class="Bid-count">34</span>
                </div>
            </header>
            <h3 class="Header">{{ advert.title }}</h3>
            <div class="Ad-body">
                <div>
                    <p>{{ advert.text }}</p>
                </div>
                <button class="Button">Plaƒçiau</button>
            </div>
            <footer class="Ad-footer">
               <ul class="Ad-categories">
                   <li class="Category Category--red">Statybos</li>
                   <li class="Category Category--purple">Lauko statybos</li>
                   <li class="Category Category--green">Remontas</li>
                   <li class="Category Category--yellow">Elektra</li>
               </ul>
            </footer>
        </section>
        {% endfor %}
    </section>
{% endblock %}

{% block filter %}
    <section>
        <ul class="FilterBar">
            <li>
                <a class="Category Category--filter Category--lightGreen">
                    <span class="Filter-title">Remontas</span>
                    <span class="Filter-icon is-active">X</span>
                </a>
            </li>
            <li>
                <a class="Category Category--filter Category--purple">
                    <span class="Filter-title">Apdailos darbai</span>
                    <span class="Filter-icon is-active">X</span>
                </a>
            </li>
            <li>
                <a class="Category Category--filter Category--blue">
                    <span class="Filter-title">Baldai</span>
                    <span class="Filter-icon is-active">X</span>
                </a>
            </li>
            {% for category in selectedCategories %}
                <li>
                    <a class="Category Category--filter Category--blue">
                        <span class="Filter-title">Pasirinkta {{ category }}</span>
                        <span class="Filter-icon is-active">X</span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
