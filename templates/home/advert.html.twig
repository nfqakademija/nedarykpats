{% extends 'base.html.twig' %}

{% block title %} Workchase {% endblock %}

{% block header %}
    <div class="PageHeader">
        <div class="PageHeader-logo">
            <a href="/"><img src="../img/logo.png" alt="worchase"></a>
        </div>
        <nav class="PageHeader-nav">
            <span class="PageHeader-item"><a href="">Visi skelbimai</a></span>
            <span class="PageHeader-item"><a href="">Mano pasiūlymai</a></span>
            <span class="PageHeader-item"><a href="">Profilis</a></span>
        </nav>
    </div>
{% endblock %}

{% block ads %}
    <div class="u-display-right">
        <a class="Button" href="/">Atgal</a>
    </div>

    <section class="SelectedAd">
        <section class="SelectedAd-content">
            <header class="Ad-header">
                <div class="Date"> {{ advert.createdAt|date("Y-m-d") }}</div>
                <div class="Bid">
                    <span class="Bid-header">Aplikavo</span>
                    <span class="Bid-count">34</span>
                </div>
            </header>
            <h3 class="Header Header--single">{{ advert.title }}</h3>
            <div class="Ad-body">
                <div>
                    <p>{{ advert.text }}</p>
                </div>
            </div>
            <footer class="Ad-footer">
                <ul class="Ad-categories">
                    {% for advertCategory in advert.categories  %}
                        <li class="Category {{ advertCategory.cssStyle }}">{{ advertCategory.title }}</li>
                    {% endfor %}
                </ul>
            </footer>
        </section>

        {#TODO:Bus naudojama antrame sprinte, netrinti#}
        {#<section class="StatusBlock StatusBlock--hired">#}
            {#<img class="StatusBlock-icon" src="/img/status-hired.svg" alt="Status hired">#}
            {#<p class="StatusBlock-title">Pasamdytas!</p>#}
        {#</section>#}
    </section>

    {% if(offers is not empty) %}
        {% for offer in offers %}
            <section class="Comments">
                <section class="Comments-block">
                    <div class="Comments-image">
                        <img src="/img/user1.png" alt="user">
                    </div>
                    <div class="Comments-content">
                        <div class="Comments-header">
                            <span class="Comments-author">{{ offer.email }}</span>
                            <span class="Comments-date">2019-04-16</span>
                        </div>
                        <div class="Comments-text">
                            <p>{{ offer.text }}</p>
                        </div>
                    </div>
                </section>
            </section>
        {% endfor %}
    {% endif %}

    <form class="ReplayBlock">
        <input class="ReplayBlock-mail u-margin-bottom" type="email" name="email" placeholder="Tavo el. paštas" required>
        <textarea class="ReplayBlock-content" name="replay" rows="4" placeholder="Parašyk žinutę su trumpa informacija apie save." required></textarea>
        <button class="Button Button--blue">Siųsti</button>
    </form>

{% endblock %}
