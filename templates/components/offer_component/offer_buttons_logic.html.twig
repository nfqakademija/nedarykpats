{% if app.user == offer.user %}
    {% if not advert.feedback %}
        {% include 'components/offer_component/offer_buttons/offer_button_cancel.html.twig' %}
    {% endif %}

{% else %}
    {% if advert.acceptedOffer %}
        {% if advert.acceptedOffer.id == offer.id  and not advert.feedback %}
            {% include 'components/offer_component/offer_buttons/offer_button_cancel.html.twig' %}
            {% include 'components/offer_component/offer_buttons/offer_button_feedback.html.twig' %}
        {% endif %}
    {% else %}
        {% include 'components/offer_component/offer_buttons/offer_button_approve.html.twig' %}
    {% endif %}
{% endif %}
